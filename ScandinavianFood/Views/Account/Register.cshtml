@model RegisterVM

@{
    ViewBag.Title = "Register";
    ViewBag.Current = "Register";
}
<div class="container-fluid text-center">
    <h1 class="mb-5">Register</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form method="post" asp-action="Register">
        <div class="form-group row mt-3">
            <div><label>Username:</label></div> <div>
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div> <div class="form-group row mt-3">
            <div><label>Password:</label></div> <div>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div> <div class="form-group row mt-3">
            <div><label>Confirm Password:</label></div> <div>
                <input type="password" asp-for="ConfirmPassword" class="form-control" />
            </div>
        </div>
        <div class="row"> <div class="mt-5"> <button type="submit" class="btn btn-primary">Register</button> </div> </div>
    </form>
    <br />
    <div class="row"> <div class="mt-3"> Already registered? <a asp-action="LogIn">Log In</a> </div> </div>
</div>
@section Scripts {
        @{
	        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
