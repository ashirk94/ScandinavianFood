@model IEnumerable<ForumPost>

@{
    ViewData["Title"] = "Forum";
}

<div class="row justify-content-center col-8 m-auto">
    <div class="col-auto">
        <table class="table table-responsive">
            <tr>
                <th>User</th>
                <th>Comment</th>
                <th>Date/Time</th>
                <th>Rating</th>
                <th>Page</th>
            </tr>
            @foreach (var post in Model)
            {
                <tr>
                    <td>@post.User</td>
                    <td>@post.Text</td>
                    <td>@post.PostDate</td>
                    <td>@post.Rating</td>
                    <td>@post.Page</td>
                </tr>
            }
        </table>
    </div>
</div>

<div  class="text-center m-auto">
    <a class="btn btn-outline-primary col-2" href="/Home/AddPost">Create Post</a>
</div>