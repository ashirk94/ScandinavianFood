@model ForumPost

@{
    ViewData["Title"] = "Forum";
    ViewData["Active"] = "Home";
}
<div class="text-center m-auto" id="back-blue">
    <h1 class="display-4">Forum</h1>

    <br />
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="Home" method="post">
        <p>Comment:</p>
        <textarea class="col-6" asp-for="Text">Add a public comment...</textarea>
        <br /><br />
        <button type="submit" class="btn btn-primary mb-3 col-4">Comment</button>
    </form>
</div>
<br />
