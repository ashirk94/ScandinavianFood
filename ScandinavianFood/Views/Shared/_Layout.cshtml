<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:title" content="Scandinavian Food" />
    <meta property="og:image" content="https://scandinavianfood.azurewebsites.net/images/lefse.jpeg" />
    <meta property="og:description" content="A class project site for CS296N with a forum, quiz, and user registration.
This is the first site I have made with ASP.NET Core and have been steadily adding features and styling as I learn." />
    <meta name="author" content="Alan Shirk" />
    <meta name="publish_date" property="og:publish_date" content="2022-02-26" />
    <title>@ViewData["Title"] - ScandinavianFood</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" href="~/images/favicon.png" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Scandinavian Food</a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="collapse" data-bs-target="#navwrapper" aria-controls="navwrapper"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navwrapper" style="">

                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Current == "Home" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Current == "References" ? "active" : "")" asp-area="" asp-controller="References" asp-action="References">References</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Current == "Recipes" ? "active" : "")" asp-area="" asp-controller="Recipes" asp-action="Recipes">Recipes</a>
                        </li>
                    </ul>
                </div>
                <ul class="navbar-nav me-auto">
                    <!-- Login buttons and links -->
                    @using Microsoft.AspNetCore.Identity
                    @inject SignInManager<AppUser> signInManager

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Current == "Admin" ? "active" : "")" asp-area="" asp-action="Index" asp-controller="Admin">Manage</a>
                        </li>
                    }
                    @if (signInManager.IsSignedIn(User))
                    {
                        // signed-in
                        <li class="nav-item">
                            <form method="post" asp-action="LogOut" asp-controller="Account"
                              asp-area="">
                                <button type="submit"
                                   class="btn btn-link nav-link">Log Out</button>
                            </form>
                        </li>
                    }
                    else
                    {
                    // new/anon user
                        <li class="nav-item">
                            <a asp-action="Register" asp-controller="Account"
                           asp-area="" class="nav-link @(ViewBag.Current == "Register" ? "active" : "")">
                                Register
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Login" asp-controller="Account"
                           asp-area="" class="nav-link @(ViewBag.Current == "Login" ? "active" : "")">Log In</a>
                        </li>
                    }
                    <li class="nav-item">
                        <div class="nav-link active" id="noclick">@User.Identity.Name</div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Alan Shirk
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
